<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/cli_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/chat_item_user_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/cli_card_logo"
        app:layout_constraintTop_toTopOf="@id/cli_card_logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cli_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cli_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cli_card_image_card"
                android:layout_width="match_parent"
                android:layout_height="160sp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/cli_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/chat_item_image"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@color/search" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cli_card_chat_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/chat_item_message"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/cli_card_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cli_card_image_card" />

            <TextView
                android:id="@+id/cli_card_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/chat_item_image"
                android:text="@string/chat_item_details"
                android:textColor="@color/item_selected"
                android:textSize="@dimen/small_text"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_chat_name"
                app:layout_constraintEnd_toStartOf="@id/cli_card_arrow"
                app:layout_constraintTop_toTopOf="@id/cli_card_chat_name" />

            <ImageView
                android:id="@+id/cli_card_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/chat_item_image"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cli_card_details"
                app:layout_constraintVertical_bias="0.6"
                app:srcCompat="@drawable/ic_arrow_6dp" />

            <ImageView
                android:id="@+id/cli_card_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/chat_item_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/cli_card_chat_name"
                app:layout_constraintTop_toBottomOf="@id/cli_card_chat_name"
                app:srcCompat="@drawable/ic_like_24dp" />

            <ImageView
                android:id="@+id/cli_card_like_filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_like"
                app:layout_constraintRight_toRightOf="@id/cli_card_like"
                app:layout_constraintStart_toStartOf="@id/cli_card_like"
                app:layout_constraintTop_toTopOf="@id/cli_card_like"
                app:srcCompat="@drawable/ic_like_filled_24dp" />

            <ImageView
                android:id="@+id/cli_card_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/chat_item_image"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_like"
                app:layout_constraintStart_toEndOf="@id/cli_card_like"
                app:layout_constraintTop_toTopOf="@id/cli_card_like"
                app:srcCompat="@drawable/ic_chat_22dp" />

            <ImageView
                android:id="@+id/cli_card_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/chat_item_image"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_like"
                app:layout_constraintStart_toEndOf="@id/cli_card_chat"
                app:layout_constraintTop_toTopOf="@id/cli_card_like"
                app:srcCompat="@drawable/ic_share_20dp" />

            <TextView
                android:id="@+id/cli_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_item_date"
                android:textColor="@color/gray"
                android:textSize="@dimen/sub_header_text"
                app:layout_constraintBottom_toBottomOf="@id/cli_card_like"
                app:layout_constraintEnd_toEndOf="@id/cli_card_arrow"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cli_card_like" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cli_card_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/cli_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cli_card">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cli_logo"
            style="@style/roundedImageViewRounded"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/chat_item_image"
            android:padding="2dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
